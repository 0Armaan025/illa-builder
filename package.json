{
  "name": "illa-builder",
  "description": "Help every Developer as fast as to build Business Tools",
  "repository": "git@github.com:illa-family/illa-builder.git",
  "private": true,
  "author": "illa Family",
  "license": "Apache-2.0",
  "version": "0.0.0",
  "scripts": {
    "dev": "yarn build-all && vite",
    "build": "tsc && vite build",
    "build-all": "yarn turbo run build",
    "preview": "vite preview",
    "test": "npx patch-package && yarn build-all && npx jest && npx cypress run-ct -b chrome",
    "report:combined": "sh ./scripts/merge-coverage.sh",
    "posttest": "yarn report:combined",
    "e2e": "npx cypress open",
    "unit": "npx jest",
    "lint": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "codemirror": "^5.65.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@emotion/react": "^11.7.1",
    "framer-motion": "^6.3.0",
    "react-redux": "^8.0.1",
    "redux": "^4.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "typescript": "^4.6.3",
    "vite": "^2.9.2",
    "@commitlint/cli": "^15.0.0",
    "@cypress/code-coverage": "^3.9.12",
    "@cypress/react": "^5.12.4",
    "@cypress/vite-dev-server": "^2.2.2",
    "@emotion/jest": "^11.7.1",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/codemirror": "^5.60.5",
    "cypress": "^9.5.1",
    "husky": "^7.0.4",
    "jest": "^27.4.0",
    "@types/jest": "^27.4.0",
    "jest-environment-jsdom": "^27.4.0",
    "prettier": "^2.5.1",
    "sinon": "^13.0.1",
    "@types/sinon": "^10.0.11",
    "ts-jest": "^27.1.3",
    "turbo": "^1.1.1",
    "vite-plugin-istanbul": "^2.5.1"
  },
  "workspaces": [
    "src/*",
    "illa-design/packages/*"
  ],
  "packageManager": "yarn@1.22.17",
  "nyc": {
    "report-dir": "cypress-coverage",
    "reporter": [
      "json"
    ]
  }
}